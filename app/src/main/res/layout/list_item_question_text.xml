<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/survey_detail_question_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/question_textsize"
        android:paddingTop="@dimen/question_top_padding"
        android:paddingBottom="@dimen/question_bottom_padding"
        android:paddingLeft="@dimen/question_left_padding"
        android:paddingRight="@dimen/question_right_padding"/>

    <EditText
        android:id="@+id/survey_detail_edittext_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:inputType="text|textMultiLine"
        android:layout_gravity="center_horizontal" />

</LinearLayout>