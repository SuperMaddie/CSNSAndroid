<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahdiye.csns.LoginActivityFragment"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText android:id="@+id/edittext_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:hint="Username" />


        <EditText android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-condensed"
            android:hint="Password"/>


        <Button
            android:id="@+id/button_login"
            android:layout_width="@dimen/button_submit_width"
            android:layout_height="@dimen/button_submit_height"
            android:text="Login"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextView"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</RelativeLayout>
